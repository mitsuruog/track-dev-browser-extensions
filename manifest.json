{
  "name": "track-dev browser extensions",
  "description": "A (maybe) useful collection for rapid development for the track dev team.",
  "version": "0.1.2",
  "permissions": ["contextMenus", "clipboardWrite", "storage"],
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_page": "src/options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "src/assets/16.png",
    "48": "src/assets/48.png",
    "128": "src/assets/128.png"
  },
  "manifest_version": 2
}
